{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Open Mock",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/.mockshadow/open-mock.py",
                "${file}"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Mock",
            "type": "shell",
            "command": "mockshadow",
            "args": [
                "mock",
                "details"
            ],
            "problemMatcher": []
        },
        {
            "label": "Remock",
            "type": "shell",
            "command": "mockshadow",
            "args": [
                "remock",
                "details"
            ],
            "problemMatcher": []
        }
    ]
}
